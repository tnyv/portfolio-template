$defaultFont: Helvetica;
$defaultBackground: rgb(245, 245, 245);

/*******************************/
/* Defaults */
/******************************/
* {
  margin: 0;
  padding: 0;
  border: 0;
  outline: 0;
  font-size: 100%;
  vertical-align: baseline;
  background: transparent;
}

li {
  list-style-type: none;
}

body {
  margin: 0;
}

html {
  overflow-x: hidden;
}

/***********************/
/* Navigation Bar */
/***********************/
nav {
  font-family: $defaultFont;
}

.home-bar {
  display: flex;
  flex-direction: row;
  flex-flow: row-reverse;
  position: fixed;
  top: -10rem;
  width: 100%;
  transition: top 0.5s;

  background: black;

  .home-link,
  .projects-link,
  .resume-link,
  .contact-link {
    font-size: 1rem;
    font-weight: 900;
    font-style: none;
    text-decoration: none;

    overflow: hidden;
    padding: 1rem;
    margin: 0rem 1rem 0rem 1rem;

    color: rgb(255, 255, 255);
  }
}

.home-bar a:hover {
  background: rgb(122, 122, 122);
}

/***********************/
/* Homepage Container */
/***********************/
.homepage-container {
  display: flex;
  flex-direction: column;

  width: 100%;
  height: 100vh;
  margin: 0;
  background: $defaultBackground;

  background-image: url("../images/wall.jpg");
  background-attachment: fixed;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}

.logo-container {
  display: flex;
  flex-direction: column;
  height: auto;

  text-align: center;
  width: 100%;

  .logo {
    font-size: 4rem;
    font-weight: 900;
    font-family: $defaultFont;
    font-style: none;
    text-decoration: none;
    white-space: nowrap;

    color: rgb(0, 0, 0);
    background: transparent;

    margin: 0;
    padding: 0;
  }

  .sub-logo {
    font-size: 2rem;
    font-weight: 900;
    font-family: $defaultFont;
    font-style: none;
    text-decoration: none;
    white-space: nowrap;
    z-index: 2;

    height: 5vh;
    margin-bottom: 1rem;

    color: rgb(255, 255, 255);
    background: transparent;
  }
}

.homepage-links-container {
  width: 100%;
  align-items: center;
  justify-content: center;

  display: flex;
  flex-direction: row;

  background: transparent;
  a {
    font-size: 3rem;
    font-family: $defaultFont;
    font-weight: 900;
    font-style: italic;
    color: #000000;
    text-decoration: none;
  }
}

.homepage-block {
  display: flex;
  flex-direction: column;

  width: auto;
  margin: 2rem 3rem 0 3rem;

  background: transparent;
  text-align: center;

  animation-fill-mode: forwards;
}

.main-picture {
  width: 25rem;
  

  animation-name: main-picture-animation;
  animation-duration: 2s;
  animation-delay: 0.7s;
  animation-fill-mode: forwards;
}

.home-block-img {
  margin-top: 2rem;
}

/****************************/
/* Homepage Link Animations */
/****************************/
.logo-container,
.projects-move,
.resume-move,
.contact-move {
  animation-name: main-picture-animation;
  animation-duration: 3s;
  animation-delay: 0.7s;
  animation-fill-mode: forwards;
}

/*****************************/
/* Shake Animation Keyframes */
/*****************************/

@keyframes shake {
  0% {
    transform: translate(1px, 1px) rotate(0deg);
  }
  10% {
    transform: translate(-1px, -2px) rotate(-1deg);
  }
  20% {
    transform: translate(-3px, 0px) rotate(1deg);
  }
  30% {
    transform: translate(3px, 2px) rotate(0deg);
  }
  40% {
    transform: translate(1px, -1px) rotate(1deg);
  }
  50% {
    transform: translate(-1px, 2px) rotate(-1deg);
  }
  60% {
    transform: translate(-3px, 1px) rotate(0deg);
  }
  70% {
    transform: translate(3px, 1px) rotate(-1deg);
  }
  80% {
    transform: translate(-1px, -1px) rotate(1deg);
  }
  90% {
    transform: translate(1px, 2px) rotate(0deg);
  }
  100% {
    transform: translate(1px, -2px) rotate(0deg);
  }
}

@keyframes link-shake {
  0% {
    transform: translate(1px, 1px) rotate(0deg);
  }
  10% {
    transform: translate(-1px, -2px) rotate(-3deg);
  }
  20% {
    transform: translate(-3px, 0px) rotate(3deg);
  }
  30% {
    transform: translate(3px, 2px) rotate(0deg);
  }
  40% {
    transform: translate(1px, -1px) rotate(3deg);
  }
  50% {
    transform: translate(-1px, 2px) rotate(-3deg);
  }
  60% {
    transform: translate(-3px, 1px) rotate(0deg);
  }
  70% {
    transform: translate(3px, 1px) rotate(-3deg);
  }
  80% {
    transform: translate(-1px, -1px) rotate(3deg);
  }
  90% {
    transform: translate(1px, 2px) rotate(0deg);
  }
  100% {
    transform: translate(1px, -2px) rotate(0deg);
  }
}

