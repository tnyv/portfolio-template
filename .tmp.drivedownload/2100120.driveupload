}

.resume-container {
  height: 50vw;
  background: rgb(173, 87, 173);
}

.contact-container {
  height: 50vw;
  background: rgb(211, 165, 96);
}


.loadme {
  color: white;
}

.loader {
  font-family: $defaultFont;
  color: white;
  font-size: 10rem;
  font-weight: 600;

  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background: rgb(0, 0, 0);


  display: flex;
  justify-content: center;
  align-items: center;

  animation: load 1s linear 1.5s 1 forwards, changez 1s linear 2s 1 forwards;
  
}



